<?xml version="1.0" encoding="UTF-8"?>
<schema name="needs" version="1.4">
  <types>
    <fieldType name="string" class="solr.StrField" omitNorms="true" />

    <!-- trie fields types -->
    <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
    <fieldType name="tint" class="solr.TrieIntField" precisionStep="8" omitNorms="true" positionIncrementGap="0"/>
    <fieldType name="tdate" class="solr.TrieDateField" omitNorms="true" precisionStep="6" positionIncrementGap="0"/>

    <!-- text field types -->
    <fieldType name="text" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.StandardTokenizerFactory" />
        <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
        <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="false" />
        <filter class="solr.LowerCaseFilterFactory" />
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
        <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldType>

    <fieldType name="boolean" class="solr.BoolField" omitNorms="false" />
    <fieldType name="location" class="solr.LatLonType" subFieldSuffix="_coordinate" />
  </types>

  <fields>
    <!-- full text search -->
    <field stored="true" indexed="true" type="tint"   name="id"    required="true" />
    <field stored="true" indexed="true" type="string" name="title" />
    <field stored="true" indexed="true" type="text"   name="title_t" />
    <field stored="true" indexed="true" type="text"   name="description"/>
    <field stored="true" indexed="true" type="text"   name="notes"/>
    <field stored="true" indexed="true" type="text"   name="reason_for_decision"/>
    <field stored="true" indexed="true" type="text"   name="reason_for_formatting_decision"/>
    <field stored="true" indexed="true" type="text"   name="all" multiValued="true" />

    <!-- fields which are both full text and faceted -->
    <field stored="true" indexed="true" type="string" name="tag" multiValued="true" />
    <field stored="true" indexed="true" type="string" name="writing_dept"/>
    
    <!-- facets -->
    <field stored="true" indexed="true" type="string" name="kind" />
    <field stored="true" indexed="true" type="string" name="status" />
    <field stored="true" indexed="true" type="string" name="priority" />
    
    <!-- sorting fields -->
    <field stored="true" indexed="true" type="string" name="created_at" />
    <field stored="true" indexed="true" type="string" name="updated_at" />
    <field stored="true" indexed="true" type="string" name="decision_made_at" />
    <field stored="true" indexed="true" type="string" name="formatting_decision_made_at" />
    
    <!-- Allow segregation of data sets so test data can be cleared -->
    <field stored="true" indexed="true" type="string" name="rails_env" />
    
    <!-- fields which are used for full text search by default -->
    <copyField source="title" dest="title_t" />
    <copyField source="*" dest="all" />
  </fields>

  <uniqueKey>id</uniqueKey>
  <defaultSearchField>all</defaultSearchField>
  <solrQueryParser defaultOperator="AND"/>
</schema>