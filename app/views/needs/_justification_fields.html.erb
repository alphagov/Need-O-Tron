<li class="nested_item">
  <fieldset class="inputs">
    <ol>
    <%= f.input :evidence_type %>
    <%= f.input :details, :input_html => { :rows => "4" } %>

    <% # we're disabling file uploads for the time being %>
    <% if false %>
    <%= f.input :file, :as => :file %>
      <li class="delete-item"><%= link_to_remove_fields "Delete", f %></li>
    <% end %>
    </ol>
  </fieldset>
</li>