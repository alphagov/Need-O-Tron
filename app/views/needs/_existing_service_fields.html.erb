<li class="nested_item">
  <fieldset class="inputs">
    <ol>
      <%= f.input :description, :input_html => { :rows => "4" } %>
      <%= f.input :link, :as => :string %>
      <%= f.input :government_run %>
      <%= f.input :kind, :collection => %W(online offline), :as => :radio %>
      <li class="delete-item"><%= link_to_remove_fields "Delete", f %></li>
    </ol>
  </fieldset>
</li>