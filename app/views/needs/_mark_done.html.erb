<div class="done well">
  <h3>Is the implementation complete?</h3>
  <%= semantic_form_for(@need) do |f| %>
    <%= f.inputs do %>
      <%= f.input :status, :input_html => {:value => 'done'}, :as => 'hidden', :label => false %>
      <%= f.input :url,  :input_html => { :class => "input-block-level" } %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, label: 'It is done' %>
    <% end %>
  <% end %>
</div>
